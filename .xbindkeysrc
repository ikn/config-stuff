# screenshot
"scrot '/home/j/ss-%H:%M:%S-$wx$h.png'"
    Print
"alltray -nt 'urxvt -e scrot -s "/home/j/ss-%H:%M:%S-$wx$h.png"'"
    Alt + Print
"alltray -nt 'urxvt -e scrot -sb "/home/j/ss-%H:%M:%S-$wx$h.png"'"
    Alt + Shift + Print
"scrot -d5 '/home/j/ss-%H:%M:%S-$wx$h.png'"
    Control + Print
"alltray -nt 'urxvt -e scrot -d5 -s "/home/j/ss-%H:%M:%S-$wx$h.png"'"
    Control + Alt + Print

# special keys
#"jsession-quit halt"
#    XF86PowerOff
"[ -z `nmcli nm wifi|grep enabled` ] && nmcli nm wifi on || nmcli nm wifi off"
    XF86WLAN
"/home/j/bin/audctl down"
    XF86AudioLowerVolume
"/home/j/bin/audctl up"
    XF86AudioRaiseVolume
"(slock &) && jsession-quit suspend"
    XF86Sleep
"/home/j/bin/toggle-ext"
    XF86Display
"/home/j/bin/audctl toggle"
    XF86AudioMute

# utils
