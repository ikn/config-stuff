own_window yes
own_window_type normal
own_window_transparent yes
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
double_buffer yes
draw_shades no
draw_borders no

alignment bottom_right
gap_x 20
gap_y 35
use_spacer none

use_xft yes
xftfont Sans:pixelsize=11
default_color 622
no_buffers yes

TEXT
${font :pixelsize=11:Bold}HDD$font ${hr 2}
/ $alignc ${fs_used /} / ${fs_size /} $alignr ${fs_free_perc /}%
${fs_bar /}
/home $alignc ${fs_used /home} / ${fs_size /home} $alignr ${fs_free_perc /home}%
${fs_bar /home}${if_mounted /media/Data}
Data $alignc ${fs_used /media/Data} / ${fs_size /media/Data} $alignr ${fs_free_perc /media/Data}%
${fs_bar /media/Data}${endif}${if_mounted /media/Vista}
Vista $alignc ${fs_used /media/Vista} / ${fs_size /media/Vista} $alignr ${fs_free_perc /media/Vista}%
${fs_bar /media/Vista}${endif}${if_mounted /media/j-ext}
external $alignc ${fs_used /media/j-ext} / ${fs_size /media/j-ext} $alignr ${fs_free_perc /media/j-ext}%
${fs_bar /media/j-ext}${endif}

${font :pixelsize=11:Bold}MEMORY$font ${hr 2}
$mem / $memmax $alignr $memperc%
$membar

${font :pixelsize=11:Bold}CPU$font ${hr 2}
${loadavg} ${execi 5 temp 2}°C ${execi 5 temp 3}°C
${cpugraph cpu0}
${cpu cpu1}% ${cpubar cpu1}
${cpu cpu2}% ${cpubar cpu2}

${font :pixelsize=11:Bold}NETWORK$font ${hr 2}
${if_match "${tail /sys/class/net/wlan0/operstate 1}"=="up"}down: ${downspeedf wlan0} KiB/s (${totaldown wlan0})
up: ${upspeedf wlan0} KiB/s (${totalup wlan0})${else}down: ${downspeedf eth0} KiB/s (${totaldown eth0})
up: ${upspeedf eth0} KiB/s (${totalup eth0})${endif}

${font :pixelsize=11:Bold}RUNTIME$font ${hr 2}
up ${uptime_short}
${battery} $alignr ${battery_time}
${battery_bar}

${font :pixelsize=22}${time %a %d %b}
