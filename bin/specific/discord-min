#! /usr/bin/env sh

discord &
while true; do
    window_id="$(xdotool search --sync --onlyvisible --class discord)"
    window_name="$(xprop -id "$window_id" |
        grep '^WM_NAME(' |
        sed 's/^.* = *"\(.*\)"/\1/'
    )"
    echo NAME = $window_name
    if [ "$window_name" != "Discord Updater" ]; then
        wmctrl -x -c discord
        break
    fi
    sleep .5
done
