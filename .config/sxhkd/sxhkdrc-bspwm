## screenshot
Print
    scrot ~/'ss-%H:%M:%S-$wx$h.png'
alt + Print
    alltray -nt 'urxvt -e scrot -s "/home/j/ss-%H:%M:%S-$wx$h.png"'
alt + shift + Print
    alltray -nt 'urxvt -e scrot -sb "/home/j/ss-%H:%M:%S-$wx$h.png"'
ctrl + Print
    scrot -d5 ~/'ss-%H:%M:%S-$wx$h.png'
ctrl + alt + Print
    alltray -nt 'urxvt -e scrot -d5 -s "/home/j/ss-%H:%M:%S-$wx$h.png"'

## power/media
XF86Sleep
    (slock &) && jsession-quit suspend
ctrl + shift + comma
#XF86AudioLowerVolume
    /home/j/bin/nonspecific/audctl down
ctrl + shift + period
#XF86AudioRaiseVolume
    /home/j/bin/nonspecific/audctl up
ctrl + shift + slash
#XF86AudioMute
    /home/j/bin/specific/audctl toggle

## utils
super + l
    /home/j/bin/specific/lock
super + h
    spacefm
super + r
    /home/j/bin/specific/gmrun-smart

## programs
ctrl + alt + f
    firefox
ctrl + alt + u
    /home/j/bin/specific/uzbl-tabbed
ctrl + alt + g
    pluma
ctrl + alt + i
    /home/j/bin/specific/irc-remote-urxvt
ctrl + alt + k
    kate
ctrl + alt + t
    urxvtc || urxvt
# toggle Thunderbird
Pause
    ~/bin/specific/toggle-window Mail

## bspwm
# focus window
super + {Left,Up,Right,Down}
    bspc window -f {left,up,right,down}
super + Tab
    bspc window -f last
super + u
    bspc window -f last.urgent
# close
super + d
    bspc window -c
# resize BR
super + alt + {Left,Up,Right,Down}
    bspc window -e {right -50,down -50,right +50,down +50}
# resize TL
super + shift + {Left,Up,Right,Down}
    bspc window -e {left -50,up -50,left +50,up +50}
# toggle floating
super + f
    bspc window focused -t floating

# presel
super + space
    "$BSPWM_SCRIPTS_DIR"/auto-presel
# swap
super + ctrl + {Left,Up,Right,Down}
    bspc window -s {left,up,right,down}
super + s
    if [ -z "$(bspc query -W -w last.manual.local)" ]; then \
        bspc window -s biggest; \
    else \
        bspc window -f last.manual.local; \
        bspc window -p cancel; \
        bspc window -s last; \
    fi 
super + t
    if [ -z "$(bspc query -W -w last.manual.local)" ]; then \
        "$BSPWM_SCRIPTS_DIR"/auto-presel br biggest; \
        bspc window -w biggest; \
    else \
        "$BSPWM_SCRIPTS_DIR"/auto-presel; \
        bspc window -f last.manual.local; \
        bspc window -p cancel; \
        bspc window -w last; \
    fi; \
    bspc desktop -c
# rotate
super + n
    "$BSPWM_SCRIPTS_DIR"/rotate-split

# mouse: focus window
~button{1,2,3}
    bspc pointer -g focus
# mouse: manipulate window
alt + button{1,2,3}
    bspc pointer -g focus; \
    bspc pointer -g {move,resize_corner,resize_corner}
alt + !button{1-3}
    bspc pointer -t %i %i
alt + @button{1-3}
    bspc pointer -u

# switch desktop
ctrl + alt + {_,shift + }{Left,Up,Right,Down}
    "$BSPWM_SCRIPTS_DIR"/desktop-wall {switch,switchwithwindow} \
        {left,up,right,down}

# reload sxhkd
super + Escape
    pkill -USR1 -x sxhkd
