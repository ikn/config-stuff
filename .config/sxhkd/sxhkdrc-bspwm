## screenshot
Print
    scrot ~/'ss-%H:%M:%S-$wx$h-'"$RANDOM"'.png'
# without sleep, the key release causes scrot to exit
alt + Print
    sleep .2; scrot -s ~/'ss-%H:%M:%S-$wx$h-'"$RANDOM"'.png'
ctrl + Print
    scrot -d5 ~/'ss-%H:%M:%S-$wx$h-'"$RANDOM"'.png'
# without sleep, the key release causes scrot to exit
ctrl + alt + Print
    sleep .2; scrot -d5 -s ~/'ss-%H:%M:%S-$wx$h-'"$RANDOM"'.png'

## power/media
XF86Sleep
    (slock &) && jsession-quit suspend
ctrl + shift + comma
    /home/j/bin/nonspecific/audctl down
ctrl + shift + period
    /home/j/bin/nonspecific/audctl up
ctrl + shift + slash
    /home/j/bin/nonspecific/audctl toggle

## utils
super + l
    /home/j/bin/specific/lock
super + h
    spacefm
super + r
    /home/j/bin/specific/gmrun-smart

## programs
ctrl + alt + t
    urxvtc || urxvt
ctrl + alt + b
    qutebrowser
ctrl + alt + i
    /home/j/bin/specific/irc-remote-urxvt
ctrl + alt + n
    urxvtc -e newsboat || urxvt -e newsboat
ctrl + alt + g
    pluma
ctrl + alt + k
    kate
ctrl + alt + f
    firefox
ctrl + alt + c
    gsimplecal
ctrl + alt + y
    bash -ic "ytvlc \"$(xclip -selection clipboard -o)\""
# toggle Thunderbird
Pause
    ~/bin/specific/toggle-window Mail

## bspwm
# focus window
super + {Left,Up,Right,Down}
    dir={west,north,east,south}; \
    if [ -z "$(bspc query -N -n focused)" ] || [ -z "$(bspc query -N -n "$dir")" ]; then \
        bspc monitor -f "$dir"; \
    else \
        bspc node -f "$dir"; \
    fi
super + {a,comma,e,o}
    dir={west,north,east,south}; \
    if [ -z "$(bspc query -N -n focused)" ] || [ -z "$(bspc query -N -n "$dir")" ]; then \
        bspc monitor -f "$dir"; \
    else \
        bspc node -f "$dir"; \
    fi
    bspc node -f last
super + Tab
    bspc node -f last.active
super + u
    bspc node -f last.urgent
super + ctrl + Tab
    bspc desktop -f last.occupied.local
super + space
    bspc node -f "$(xorg-choose-window aoeuhtns \
        -b "$(bspc query -N -n focused)")"
# close
super + d
    bspc node -c
# resize BR
super + alt + {Left,Up,Right,Down}
    bspc node @{east -r -50,south -r -50,east -r +50,south -r +50}
super + alt + {a,comma,e,o}
    bspc node @{east -r -50,south -r -50,east -r +50,south -r +50}
# resize TL
super + shift + {Left,Up,Right,Down}
    bspc node @{west -r -50,north -r -50,west -r +50,north -r +50}
super + shift + {a,comma,e,o}
    bspc node @{west -r -50,north -r -50,west -r +50,north -r +50}
# toggle floating
super + f
    if [ -z "$(bspc query -N -n focused.floating)" ]; then \
        bspc node focused -t floating; \
    else \
        bspc node focused -t tiled; \
    fi
# toggle monocle
super + m
    bspc desktop -l next

# swap
super + ctrl + {Left,Up,Right,Down}
    wid="$(bspc query -N -n focused)"; \
    bspc node -s {west,north,east,south}; \
    bspc node -f "$wid"; \
    bspc monitor -f "$(bspc query -M -n "$wid")"
super + ctrl + {a,comma,e,o}
    wid="$(bspc query -N -n focused)"; \
    bspc node -s {west,north,east,south}; \
    bspc node -f "$wid"; \
    bspc monitor -f "$(bspc query -M -n "$wid")"
super + s
    bspc node -s biggest.local.\!focused
super + alt + s
    wid="$(bspc query -N -n focused)"; \
    bspc node -s "$(xorg-choose-window aoeuhtns)"; \
    bspc node -f "$wid"; \
    bspc monitor -f "$(bspc query -M -n "$wid")"
super + t
    "$BSPWM_SCRIPTS_DIR"/auto-presel br biggest.local.\!focused; \
    bspc node -n biggest.local.\!focused
super + alt + t
    wid="$(bspc query -N -n focused)"; \
    target_wid="$(xorg-choose-window aoeuhtns)"; \
    "$BSPWM_SCRIPTS_DIR"/auto-presel br "$target_wid"; \
    bspc node -n "$target_wid"; \
    bspc node -f "$wid"; \
    bspc monitor -f "$(bspc query -M -n "$wid")"
# rotate
super + n
    "$BSPWM_SCRIPTS_DIR"/rotate-split

# switch desktop
ctrl + alt + {_,shift + }{Left,Up,Right,Down}
    "$BSPWM_SCRIPTS_DIR"/desktop-wall {switch,switchwithwindow} \
        {west,north,east,south}
ctrl + alt + {_,shift + }{a,comma,e,o}
    "$BSPWM_SCRIPTS_DIR"/desktop-wall {switch,switchwithwindow} \
        {west,north,east,south}

# reload sxhkd
super + Escape
    pkill -USR1 -x sxhkd
