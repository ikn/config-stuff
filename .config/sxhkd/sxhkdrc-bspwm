## screenshot
Print
    scrot ~/'ss-%H:%M:%S-$wx$h.png'
alt + Print
    urxvt -e scrot -s ~/'ss-%H:%M:%S-$wx$h.png'
ctrl + Print
    scrot -d5 ~/'ss-%H:%M:%S-$wx$h.png'
ctrl + alt + Print
    urxvt -e scrot -d5 -s ~/'ss-%H:%M:%S-$wx$h.png'

## power/media
XF86Sleep
    (slock &) && jsession-quit suspend
ctrl + shift + comma
    /home/j/bin/nonspecific/audctl down
ctrl + shift + period
    /home/j/bin/nonspecific/audctl up
ctrl + shift + slash
    /home/j/bin/nonspecific/audctl toggle

## utils
super + l
    /home/j/bin/specific/lock
super + h
    spacefm
super + r
    /home/j/bin/specific/gmrun-smart

## programs
ctrl + alt + t
    urxvtc || urxvt
ctrl + alt + u
    uzbl-tabbed-open
ctrl + alt + i
    /home/j/bin/specific/irc-remote-urxvt
ctrl + alt + n
    urxvtc -e newsbeuter || urxvt -e newsbeuter
ctrl + alt + g
    pluma
ctrl + alt + k
    kate
ctrl + alt + f
    firefox
# toggle Thunderbird
Pause
    ~/bin/specific/toggle-window Mail

## bspwm
# focus window
super + {Left,Up,Right,Down}
    bspc node -f {west,north,east,south}
super + {a,comma,e,o}
    bspc node -f {west,north,east,south}
super + Tab
    bspc node -f last
super + u
    bspc node -f last.urgent
super + ctrl + Tab
    bspc desktop -f last.occupied
super + space
    bspc node -f "$(xorg-choose-window aoeuhtns)"
# close
super + d
    bspc node -c
# resize BR
super + alt + {Left,Up,Right,Down}
    bspc node @{east -r -50,south -r -50,east -r +50,south -r +50}
super + alt + {a,comma,e,o}
    bspc node @{east -r -50,south -r -50,east -r +50,south -r +50}
# resize TL
super + shift + {Left,Up,Right,Down}
    bspc node @{west -r -50,north -r -50,west -r +50,north -r +50}
super + shift + {a,comma,e,o}
    bspc node @{west -r -50,north -r -50,west -r +50,north -r +50}
# toggle floating
super + f
    if [ -z "$(bspc query -N -n focused.floating)" ]; then \
        bspc node focused -t floating; \
    else \
        bspc node focused -t tiled; \
    fi
# toggle monocle
super + m
    bspc desktop -l next

# swap
super + ctrl + {Left,Up,Right,Down}
    bspc node -s {west,north,east,south}
super + ctrl + {a,comma,e,o}
    bspc node -s {west,north,east,south}
super + s
    bspc node -s biggest.\!focused
super + alt + s
    bspc node -s "$(xorg-choose-window aoeuhtns)"
super + t
    "$BSPWM_SCRIPTS_DIR"/auto-presel br biggest.\!focused; \
    bspc node -n biggest.\!focused
super + alt + t
    wid="$(xorg-choose-window aoeuhtns)"; \
    "$BSPWM_SCRIPTS_DIR"/auto-presel br "$wid"; \
    bspc node -n "$wid"
# rotate
super + n
    "$BSPWM_SCRIPTS_DIR"/rotate-split

# mouse: focus window
~button{1,2,3}
    bspc pointer -g focus
# mouse: manipulate window
alt + button{1,2,3}
    bspc pointer -g focus; \
    bspc pointer -g {move,resize_corner,resize_corner}
alt + !button{1-3}
    bspc pointer -t %i %i
alt + @button{1-3}
    bspc pointer -u

# switch desktop
ctrl + alt + {_,shift + }{Left,Up,Right,Down}
    "$BSPWM_SCRIPTS_DIR"/desktop-wall {switch,switchwithwindow} \
        {west,north,east,south}
ctrl + alt + {_,shift + }{a,comma,e,o}
    "$BSPWM_SCRIPTS_DIR"/desktop-wall {switch,switchwithwindow} \
        {west,north,east,south}

# reload sxhkd
super + Escape
    pkill -USR1 -x sxhkd
