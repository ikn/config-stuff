## utils
super + h
    spacefm
super + r
    /home/j/bin/specific/gmrun-smart

## programs
ctrl + alt + f
    firefox
ctrl + alt + u
    /home/j/bin/specific/uzbl-tabbed
ctrl + alt + g
    pluma
ctrl + alt + i
    /home/j/bin/specific/irc-remote-urxvt
ctrl + alt + k
    kate
ctrl + alt + t
    urxvtc || urxvt

## bspwm
# focus window
super + {Left,Up,Right,Down}
    bspc window -f {left,up,right,down}
super + Tab
    bspc window -f last.local
super + u
    bspc window -f last.urgent
# close
super + d
    bspc window -c
# resize BR
super + alt + {Left,Up,Right,Down}
    bspc window -e {right -50,down -50,right +50,down +50}
# resize TL
super + shift + {Left,Up,Right,Down}
    bspc window -e {left -50,up -50,left +50,up +50}

# presel
super + space
    "$BSPWM_SCRIPTS_DIR"/auto-presel
# swap
super + ctrl + {Left,Up,Right,Down}
    bspc window -s {left,up,right,down}
super + s
    if [ -z "$(bspc query -W -w last.manual)" ]; then \
        bspc window -s biggest; \
    else \
        bspc window -f last.manual; \
        bspc window -p cancel; \
        bspc window -s last; \
    fi 
super + t
    if [ -z "$(bspc query -W -w last.manual)" ]; then \
        "$BSPWM_SCRIPTS_DIR"/auto-presel br biggest; \
        bspc window -w biggest; \
    else \
        "$BSPWM_SCRIPTS_DIR"/auto-presel; \
        bspc window -f last.manual; \
        bspc window -p cancel; \
        bspc window -w last; \
    fi; \
    bspc desktop -c
# rotate
super + n
    "$BSPWM_SCRIPTS_DIR"/rotate-split

# mouse: focus window
~button1
    bspc pointer -g focus
~button2
    bspc pointer -g focus
~button3
    bspc pointer -g focus
# mouse: manipulate window
alt + button{1,2}
    bspc pointer -g {move,resize_corner}
alt + !button{1-3}
    bspc pointer -t %i %i
alt + @button{1-3}
    bspc pointer -u

# switch desktop
ctrl + alt + {_,shift + }{Left,Up,Right,Down}
    "$BSPWM_SCRIPTS_DIR"/desktop-wall {switch,switchwithwindow} \
        {left,up,right,down}

# reload sxhkd
super + Escape
    pkill -USR1 -x sxhkd
