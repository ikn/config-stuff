#! /bin/bash

wifi=true

sleep 2
feh --no-fehbg --bg-center "`cat /home/j/.wallpaper`"
conky &

if [ "$1" != light ]; then
    if $wifi; then
        nm-applet &
    fi
    sleep 3
    alltray -nt -k VoidSymbol firefox &
    if $wifi; then
        sleep 7
    fi
    alltray -nt -k XF86Launch1 thunderbird &
fi
